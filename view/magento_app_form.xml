<data>
    <xpath
        expr="/form/notebook/page[@id='general']/field[@name='product_options']"
        position="after">
            <label name="manufacturer_name"/>
            <field name="manufacturer_name"/>
    </xpath>
    <xpath
        expr="/form/notebook/page[@id='core']"
        position="after">
        <page string="Manufacturer" id="manufacturer">
            <separator string="Manufacturer" colspan="4" id="manufacturer"/>
            <button name="core_manufacturer" colspan="4"/>
        </page>
    </xpath>
</data>
